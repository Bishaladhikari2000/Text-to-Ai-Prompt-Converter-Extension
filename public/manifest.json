{
  "manifest_version": 3,
  "name": "Text to AI Prompt Converter",
  "version": "1.0",
  "description": "Convert text into AI prompts.",
  "action": {
      "default_popup": "index.html",
      "default_icon": {
          "16": "icon16.png",
          "48": "icon48.png",
          "128": "icon128.png"
      }
  },
  "permissions": ["storage"],
  "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
  }
}